<li class="chat-list-item">
  <div class="chat-list-item__avatar">
    {{#if avatar}}
      <img class="avatar" src="{{avatar}}" alt="user-avatar">
    {{else}}
      <img class="avatar" src="../../assets/icons/avatar-default.svg" alt="user-avatar">
    {{/if}}
  </div>
  <div class="chat-list-item__message">
    <div class="chat-list-item__message-title"><span>{{title}}</div>

    <div class="chat-list-item__message-author"><span>{{last_message.user.first_name}} {{last_message.user.second_name}}</div>
    <div class="chat-list-item__message-text">{{last_message.content}}</div>
  </div>

  <div class="chat-list-item__message-info">
    <div class="chat-list-item__message-time">{{time}}</div>
  </div>
  {{#if unread_count}}
      <div class="chat-list-item__message-unread">{{unread_count}}</div>
  {{/if}}
</li>
